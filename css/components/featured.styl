.featured
  padding: 30px 15px 20px
  background: black(.1)
  text-align: center
  clear: left

  .number,
  .phrase
    font-weight: bold

  .phrase
    margin-top: 5px
    margin-bottom: 20px
    font-size: 40px
    line-height: 1.2

  &.restaurant-wars
    .avatar
      margin-bottom: 15px

  &.phrase-list
    background: white(.1)
    border-top: 1px solid white(.2)
    border-bottom: 1px solid white(.2)

    .phrase
      margin-bottom: 40px

    p
      margin-bottom: 8px
      padding: 5px 45px 5px 10px
      position: relative
      background: black(.05)
      border-radius: 3px

      span
        {centerVert}
        right: 10px
        font-size: 12px
        font-weight: bold

  .roster
    margin-left: auto
    margin-right: auto
    max-width: 850px

@media screen and (max-width: $bp-small)

  .featured
    margin: 30px 0

    .number
      font-size: 40px

    .phrase
      font-size: 25px

    &.phrase-list

      .grid-item
        margin-bottom: 0

@media screen and (min-width: $bp-small + 1)

  .featured
    margin: 0 0 80px

    .number
      font-size: 85px

    &.phrase-list

      .grid-item
        margin-bottom: 20px