// Base styling

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%
  -webkit-text-size-adjust: none

body
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  font-family: $font-family-helvetica
  font-size: 18px
  line-height: 1.4
  color: white
  background: #333

::-moz-selection
  background-color: mediumorchid
  color: white

::selection
  background-color: mediumorchid
  color: white

h1, p
  margin-bottom: 20px

h1
  font-weight: bold

a
  display: inline-block
  text-decoration: none
  color: cyan

p a
  border-bottom: 1px dotted transparent
  &:hover
    border-bottom: 1px dotted cyan

p
  margin: 0 0 20px

em
  font-style: italic

img:not(.avatar)
  width: 100%
  max-width: 100%

.footnote
  font-size: 14px
  color: white(.6)

// Clearfix
.cf,
.grid
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both