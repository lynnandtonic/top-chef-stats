.roster

  .avatar
    margin: 0 -5px
    position: relative
    z-index: 2

  .winner
    display: inline-block
    position: relative

    &:before
      width: 100%
      display: block
      position: absolute
      left: 0
      content: 'WINNER!'
      z-index: 1
      font-size: 11px
      font-weight: bold
      letter-spacing: 1px
      color: white

h2 + .roster
  margin-top: 15px

@media screen and (max-width: 390px)

  .stat.roster-lg
    min-height: 190px

@media screen and (max-width: 449px)

  .stat.roster-xl
    min-height: 190px

@media screen and (max-width: $bp-small)

  .roster
    .winner:before
      top: 75px

@media screen and (min-width: $bp-small + 1)

  .roster
    .winner:before
      top: 92px

@media screen and (min-width: $bp-small + 1) and (max-width: $bp-large)

  .stat.roster-lg
    min-height: 240px
