.name

  .avatar
    margin-right: -7px

  span
    padding: 8px 10px
    display: inline-block
    background: black(.2)
    border-radius: 3px
    font-weight: normal
    line-height: 1

    @media screen and (max-width: $bp-small)
      font-size: .35em
    @media screen and (min-width: $bp-small + 1)
      font-size: .18em

  &:not(.textonly)
    span
      @media screen and (max-width: $bp-small)
        padding-right: 40px
        margin-right: -35px
      @media screen and (min-width: $bp-small + 1)
        padding-right: 45px
        margin-right: -45px

  &.textonly
    align-self: center
