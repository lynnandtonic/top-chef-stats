.themed
  margin: 30px 0 0
  clear: both

  h1
    position: relative
    border-top: 1px dashed black(.2)
    text-align: center
    text-transform: uppercase
    font-size: 14px
    font-weight: bold

    span
      padding: 10px 15px
      position: relative
      top: -20px
      display: inline-block
      background: black(.2)
      border-radius: 3px

@media screen and (max-width: $bp-small)

  .themed
    margin-top: 50px