.featured
  padding: 30px 15px 20px
  background: black(.1)
  text-align: center
  clear: left

  & + .featured
    margin-top: -50px

  .number,
  .phrase
    font-weight: bold

  .phrase
    margin-top: 5px
    margin-bottom: 20px
    font-size: 2.2em
    line-height: 1.2

  &.restaurant-wars
    .avatar
      margin-bottom: 15px

  &.phrase-list
    background: white(.1)
    border-top: 1px solid white(.2)
    border-bottom: 1px solid white(.2)

    .phrase
      margin-bottom: 40px

    p
      margin-bottom: 8px
      padding: 5px 45px 5px 10px
      position: relative
      background: black(.05)
      border-radius: 3px

      span
        {centerVert}
        right: 10px
        font-size: .7em
        font-weight: bold

    &.large
      p
        padding-right: 60px
        span
          font-size: .85em

  .roster
    margin-left: auto
    margin-right: auto
    max-width: 880px

@media screen and (max-width: $bp-small)

  .featured
    margin: 30px 0

    & + .featured
      margin-top: -10px

    h2
      font-size: .9em

    .number
      font-size: 2em

    .phrase
      font-size: 1.4em

    &.phrase-list

      p
        font-size: .9em

      .grid-item
        margin-bottom: 0

@media screen and (min-width: $bp-small + 1)

  .featured
    margin: 0 0 80px

    .number
      font-size: 4.7em

    &.phrase-list

      .grid-item
        margin-bottom: 20px
