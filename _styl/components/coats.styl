.coat
  padding: 0 15px
  float: left
  display: inline-block

  img
    max-width: 400px

@media screen and (max-width: $bp-small)

  .coat
    width: 50%
    margin-bottom: 30px

    h2
      font-size: 14px

@media screen and (min-width: $bp-small + 1)

  .coat
    width: 33.33%
    margin-bottom: 50px

@media screen and (min-width: $bp-large + 1)

  .coat
    width: 25%

