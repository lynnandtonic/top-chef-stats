@media screen and (max-width: $bp-small)

  .grid
    padding-bottom: 40px

    .grid-xs-2
      width: 50%
      float: left

@media screen and (min-width: $bp-small + 1)

  .grid-item
    margin: 0 0 30px
    padding: 0 15px
    float: left

  .grid-sm-1
    width: 100%

  .grid-sm-2
    width: 50%

  .grid-sm-3
    width: 33.33%

@media screen and (min-width: $bp-large + 1)

  .grid-item
    margin: 0 0 50px
    padding: 0 25px

  .grid-lg-2
    width: 50%

  .grid-lg-3
    width: 33.33%

  .grid-lg-3-1
    width: 66.66%

  .grid-lg-4
    width: 25%

  .grid-lg-5
    width: 20%