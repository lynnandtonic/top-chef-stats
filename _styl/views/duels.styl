.duel-chef
  position: relative
  background: black(.2)
  border-radius: 3px
  font-size: 15px

  .avatar
    position: absolute

  &.winner
    background: gold
    color: brown
    font-weight: bold

  &:last-child

    //- VS circle
    &:before
      width: 35px
      height: 35px
      padding: 10px
      content: 'VS'
      position: absolute
      background: white
      border-radius: 50%
      box-shadow: 0 5px 2px black(.2)
      font-weight: bold
      font-size: 12px
      text-align: center
      color: black(.6)

@media screen and (max-width: 450px)

  .duel
    margin-bottom: 30px

  .duel-chef
    margin-bottom: 15px

    &:last-child
      text-align: right

      &:before
        margin-left: -17px
        left: 50%
        top: -25px

@media screen and (min-width: 451px)

  .duel-chef
    width: 49%
    float: left

    &:first-child
      margin-right: 2%
      padding-left: 40px
      padding-right: 25px
      text-align: right

    &:last-child
      padding-right: 40px
      padding-left: 25px

      //- VS circle
      &:before
        left: -23px
        top: 7px

@media screen and (min-width: 451px) and (max-width: $bp-small)

  .duel-chef
    margin-bottom: 30px

@media screen and (max-width: $bp-small)

  .duel-chef
    padding: 15px 0
    .avatar
      top: -10px
    &:first-child
      padding-left: 50px
      .avatar
        left: -20px
    &:last-child
      padding-right: 50px
      .avatar
        right: -20px

@media screen and (min-width: $bp-small + 1)

  .duel-list
    margin-bottom: 50px
  .duel-chef
    padding: 18px 0
    .avatar
      top: -20px
    &:first-child
      padding-left: 60px
      .avatar
        left: -30px
    &:last-child
      padding-right: 60px
      .avatar
        right: -30px

@media screen and (min-width: $bp-small + 1) and (max-width: $bp-large)

  .duel-chef
    margin-bottom: 10px