.season
  background: linear-gradient(175deg, darkcyan 0,
                                         mediumvioletred 100%)
  padding: 20px

  &.home
    background: linear-gradient(170deg, steelblue 0,
                                         darkcyan 50%,
                                         mediumvioletred 100%)

  &.glossary,
  &.four-oh-four
    background: linear-gradient(170deg, steelblue 0,
                                         darkcyan 50%)

  &.masters
    background: linear-gradient(170deg, mediumvioletred 0,
                                         darkcyan 50%,
                                         steelblue 100%)

  &.desserts
    background: linear-gradient(170deg, darkmagenta 0,
                                         mediumvioletred 50%,
                                         darkcyan 100%)

  &.duels
    background: linear-gradient(180deg, crimson 0,
                                         darkcyan 50%,
                                         steelblue 100%)

